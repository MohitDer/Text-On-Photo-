<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TextOnPhoto" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_secondary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/color_primary</item>
    </style>

    <style name="Theme.TextOnPhoto" parent="Base.Theme.TextOnPhoto" />

    <color name="color_primary">#FFFFFF</color>
    <color name="color_secondary">#696969</color>
    <color name="color_accent">#353535</color>

</resources>