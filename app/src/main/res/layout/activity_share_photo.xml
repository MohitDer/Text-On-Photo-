<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activitys.SharePhotoActivity"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_back"
                android:text="Save To Phone"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_below="@id/rl_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:id="@+id/cv_share_image">

            <ImageView
                android:id="@+id/iv_share_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/cv_share_image"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_create_new_photo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Create New Photo"
                android:background="@drawable/bg_btn"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_share_photo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Share Photo"
                android:background="@drawable/bg_btn"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp">

                <com.google.android.ads.nativetemplates.TemplateView
                    android:id="@+id/template_small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@color/white"
                    app:gnt_template_type="@layout/gnt_small_template_view" />


            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </RelativeLayout>


</layout>